			'firstshow/counterup' */

		], function(jQuery){

			(function($) {

				$(window).scroll(function(){

					if ($(this).scrollTop() > 1) {

						$('.scroll-to-top').css({bottom:"25px"});

					} else {

						$('.scroll-to-top').css({bottom:"-100px"});

					}

				});



