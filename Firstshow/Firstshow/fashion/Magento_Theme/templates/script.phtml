<script type="text/javascript">

		require([

			'jquery'

		], function(jQuery){

			(function($) {

				$(document).ready(function () {

					if ($(this).width() < 992) {
						$('.category-item.parent > a').click(function(e){
							 e.preventDefault();
							 $('.sub-menu').removeClass('is_opened').hide();
