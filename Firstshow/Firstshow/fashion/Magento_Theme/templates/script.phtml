<?php $themeHelper = $this->helper('FIRSTSHOW\Mpanel\Helper\Data'); ?>

<?php if($themeHelper->getStoreConfig('firstshowtheme/general/sticky_menu')): ?>

	<script type="text/javascript">

		require([

			'jquery'

		], function(jQuery){

			(function($) {

				$(window).scroll(function () {

					if ($(this).scrollTop() > 40 /*&& $(this).width() >= 992*/) {

						$('.header').addClass('header-sticky-menu-active');

					} else {

						$('.header').removeClass('header-sticky-menu-active');

					}

				});

			})(jQuery);

		});

	</script>

<?php endif ?>

